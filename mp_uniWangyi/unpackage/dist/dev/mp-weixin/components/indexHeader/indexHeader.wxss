.header-search-login {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 60rpx;
  padding: 10rpx 0;
}
.header-search-login .logo {
  width: 140rpx;
  height: 40rpx;
  margin: 10rpx 30rpx;
}
.header-search-login .search-input {
  width: 440rpx;
  height: 60rpx;
  background: #ededed;
  position: relative;
  border-radius: 10rpx;
}
.header-search-login .search-input .iconfont {
  position: absolute;
  left: 10rpx;
  top: 25%;
  font-size: 30rpx;
}
.header-search-login .search-input input {
  border-radius: 10rpx;
  height: 60rpx;
  width: 390rpx;
  margin-left: 50rpx;
}
.header-search-login .search-input .placeholder {
  font-size: 24rpx;
  color: #666;
}
.header-search-login .btn-login {
  width: 124rpx;
  height: 60rpx;
  color: #d43c33;
  line-height: 56rpx;
  text-align: center;
  font-size: 24rpx;
  margin: 0 20rpx;
}

